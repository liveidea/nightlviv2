
<body class="body1">
 <div class="container" style="margin-top: 60px">
  <div class="row">
    <% if admin_signed_in? %>
       <%= link_to  new_club_path do %>
       <button type="button" class="btn btn-primary">Додати клуб</button> 
       <%end%>
    <% end %>
        
    <%- @club.each do |club| %>
    	<div class="block1">
    	  <h2><%= club.name %></h2>
        <%= link_to  images_path(club) do %>
          <button type="button" class="btn btn-primary">Фото</button> 
        <%end%>
        <% if admin_signed_in? %>
          <%= link_to  edit_club_path(club) do %>
            <button type="button" class="btn btn-primary">Відредагути</button> 
          <%end%>
        <% end %>
    	<br><br>
    	</div>
    <% end %>
	 </div>
  </div>
 </div>
</body>
