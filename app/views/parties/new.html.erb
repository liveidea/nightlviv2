<div class="container" style="margin-top: 60px">
  <div class="row">
         <h1>Додати Вечірку</h1>

<%= form_for @party do |f| %>
 
  <% if @party.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@party.errors.count, "error") %> prohibited
        this party from being saved:
      </h2>
      <ul>
        <% @party.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :Назва %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Дата %><br>
    <%= f.date_select :date %>
  </p>

  <p>
    <%= f.label :Про_Вечірку %><br>
    <%= f.text_area :about %>
  </p>

  <p>
    <%= f.label :Ціна %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :Клуб %><br>
    <%= f.select :club_id, Club.all.collect {|x| [x.name, x.id]} %>
  
  </p>


 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
</div>
</div>